<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/nameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="이름 입력 필요"/>

    </LinearLayout>

    <Button
        android:id="@+id/nameInputBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이름 입력하러 가기" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/phoneNumTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="폰번 입력 필요"/>

    </LinearLayout>

<!--    연습문제 : 폰번을 입력 받을 액티비티 생성.-->
<!--    이름 입력 화면과 동일한 구조. EditPhoneActivity-->
<!--    밑의 버튼을 누르면 해당 액티비티로 이동 => 폰번 입력받고 => 돌아오자-->
<!--    결과로 phoneNumTxt에 반영.-->

    <Button
        android:id="@+id/phoneNumInputBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="폰번 입력하러 가기" />

    <Button
        android:id="@+id/phoneDialBtn"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="전화 다이얼 화면" />

    <Button
        android:id="@+id/phoneCallBtn"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="바로 전화 연결" />

    <Button
        android:id="@+id/smsBtn"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="문자 화면 이동" />


    <Button
        android:id="@+id/webLinkBtn"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="네이버로 이동" />

    <Button
        android:id="@+id/storeLinkBtn"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="카카오톡 앱 다운로드이동" />

    <Button
        android:id="@+id/googleMapBtn"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="간략한 구글 지도 보여주기" />

</LinearLayout>